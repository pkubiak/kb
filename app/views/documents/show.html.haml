%div.card
  %div.card-body
    = breadcrumbs(@hierarchy)

    %div.mb-2.d-flex.justify-content-between.align-items-center
      %h2.mb-0= @document.title
      -# %a.btn.btn-sm.btn-secondary{href: '#'} Edit
      %a.btn.btn-outline-secondary{href: '#'}
        %i.fas.fa-cog.fa-fw
    %div{style: 'font-size: 0.9em; opacity: 0.7'}
      %span
        %i.fas.fa-calendar-alt.ml-2
        10 Oct 2013
      %span
        %i.fas.fa-history.ml-2
        7 revisions
      %span
        %i.far.fa-clock.ml-2
        = t('datetime.distance_in_words.less_than_x_minutes', count: @document.reading_time)
        read
    %hr.mt-2



    %div.text-wrap.markdown
      = @document.content

    %hr

    %nav.d-flex.justify-content-between
      %div.text-left
        %a.btn.btn-pill.btn-outline-primary{href: '#'} Previous

      %div.text-right
        %a.btn.btn-pill.btn-outline-primary{href: '#'} Next
